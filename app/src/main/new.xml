<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp"
    tools:context=".ui.NotificationHistoryActivity">

    <TextView android:id="@+id/tvScheduledTitle" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Scheduled Notifications"
        android:textAppearance="?attr/textAppearanceHeadline6" android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvScheduledNotifications"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
        android:layout_marginBottom="16dp" />

</LinearLayout>
